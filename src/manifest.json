{
    "manifest_version": 2,

    "name": "汉典划词查询",
    "description": "在任何页面用汉典划词查询的工具，文学爱好者不可或缺的利器！",
    "version": "1.2.4",
    "icons": {
        "16": "handian16.png",
        "48": "handian48.png",
        "128": "handian128.png"
    },

    "content_scripts": [{
        "matches": [
            "*://*/*",
            "file://*/*"
        ],
        "js": ["show.js"],
        "run_at": "document_end"
    }],

    "permissions": [
        "http://*.zdic.net/",
        "storage"
    ],
    "browser_action": {
        "default_icon": "handian48.png",
        "default_popup": "popup.html"
    }
}